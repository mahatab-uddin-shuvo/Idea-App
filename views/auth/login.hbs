<div class="row">
    <div class="col-md-8 offset-md-2">
        <h2 class="text-muted mb-3">Login</h2>
        <form action="/auth/login" method="POST" >

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" class="form-control" {{#if userInput.email}}
                    value="{{userInput.email}}" {{/if}}>
            </div>

            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" name="password" id="password" class="form-control">
            </div>

            <input type="hidden" name="_csrf" value="{{csrfToken}}">
            <input type="submit" class="btn btn-primary" value="Login">

        </form>
        <a href="/auth/google" class="btn btn-info btn-block mt-2" style="width:200px">Login With Google</a>
      
        <a href="/auth/forget-password" class="btn btn-danger btn-block mt-2" style="width:200px">Forget Password</a>

    </div>
</div>