<form action="/ideas" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" {{#if idea.title}}
            value="{{idea.title}}" {{/if}}>
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control" id="description" rows="5">
        {{#if idea.description}}
        {{idea.description}} 
        {{/if}}
        </textarea>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status">
            <option value="public" {{#if idea.status}} {{compareValues "public" idea.status}} {{/if}}>
                Public
            </option>
            <option value="private" {{#if idea.status}} {{compareValues "private" idea.status}} {{/if}}>
                Private
            </option>
        </select>
    </div>
     <div class="form-group">
        <label for="tags">Tags</label>
        <input type="text" name="tags" class="form-control" 
        id="tags" data-role="tagsinput">
    </div>
    <div class="form-check">
        <input type="checkbox" name="allowComments" class="form-check-input" id="allowComments"
            {{#if idea.allowComments}} 
            checked="true"
            {{/if}}/>
        <label for="allowComments" class="form-check-label">AllowComments</label>
    </div>

    <button disabled style="display: none;" class="btn btn-primary mt-3" type="submit">Add idea</button>
    <button  class="btn btn-primary mt-3" type="submit">Add idea</button>

</form>