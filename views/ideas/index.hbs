<div class="row">
  <div class="col-9">
    {{#if userRef}}
    <h2>All Ideas By<em> {{firstName}}</em></h2>
    {{>_ideas-index}}

    {{else if catRef}}
    <h2>All Ideas By<em> {{catName}}</em></h2>
    {{>_ideas-index}}

    {{else}}
    {{>_ideas-index}}

    {{/if}}
  </div>
  <div class="col-3">
    <h3>Categories</h3>
    <hr>
    {{#each categories}}
    <a href="/categories/{{category}}/ideas"><span class="badge badge-primary">{{category}}</span></a>
    {{/each}}

    <h3>Tags</h3>
    <hr>
    {{#each ideasTags}}
    {{#each tags}}
    <span class="badge badge-primary">{{this}}</span>
    {{/each}}
    {{/each}}
  </div>
</div>