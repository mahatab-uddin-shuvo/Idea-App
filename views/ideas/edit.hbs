<form action="/ideas/{{idea.id}}?_method=PUT" method="POST">
    <div class="form-group">
        <label for="title">Title</label>
        <input type="text" name="title" class="form-control" id="title" value="{{idea.title}}"
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea name="description" class="form-control"
        id="description" rows="5" >{{idea.description}}</textarea>
    </div>
    <div class="form-group">
        <label for="status">Status</label>
        <select name="status" id="status">

            <option value="public" {{compareValues "public" idea.status}}>
                Public
            </option>
            <option value="private" {{compareValues "private" idea.status}}>
                Private
            </option>
        </select>
    </div>
    <div class="form-check">
        <input type="checkbox" name="allowComments" class="form-check-input"
          id="allowComments" 
          {{#if idea.allowComments}} 
          checked="true" 
          {{/if}}>
        <label for="allowComments" class="form-check-label">AllowComments</label>

    </div>
    <button class="btn btn-primary mt-3" type="submit">Update Idea</button>

</form>